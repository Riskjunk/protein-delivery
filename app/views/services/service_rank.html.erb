<div class="container">
  <ul class="nav nav-tabs nav-justified">
    <li class="nav-item"><%= link_to 'サービスランキング', service_rank_path, class: 'nav-link font-weight-bold active' %></li>
    <li class="nav-item"><%= link_to 'メニューランキング', menu_rank_path, class: 'nav-link' %></li>
  </ul>
  <div class="text-center bg-light border border-top-0">
    <% @service_rate_ranks.each.with_index(1) do |rank, i| %>
    <div class="py-5">
      <%= "第#{i}位"%>
      <%= rank.name %>
      <div class="col-sm-12">
        <%= rank.body %>
        <%= render 'reviews/rate_average', { service: rank } %>
      </div>
      <div class="col-sm-12">
        <%= link_to '公式HPはコチラ！', rank.service_url, target: :_blank, rel: 'noopener noreferrer' %>
      </div>
      <div class="col-sm-12">
        <%= image_tag "services/#{rank.service_image}", width: '30%', height: '30%' %>
      </div>
      <div class="col-sm-12">
        <%= link_to 'このサービスのメニューはコチラ！', service_menus_path(rank) %>
      </div>
    </div>
    <% end %>
  </div>
</div>