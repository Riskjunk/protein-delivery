<div class="container">
  <%# タイトル %>
  <div class="user-title">
    <%= render 'shared/title', text: 'ユーザー登録', html: '<span class="mr-2"><a href="/login"><i class="fas fa-sign-in-alt mr-2"></i></i>ログイン</a></span><i class="fas fa-angle-double-right mx-2"></i>'.html_safe %>
  </div>

  <div class="row pt-4">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <%= form_with model: @user, local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="form-group">
          <i class="fas fa-pen"></i>
          <%= f.label :name %><span class="bg-danger text-white small px-1 ml-2">必須</span>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <i class="fas fa-envelope"></i>
          <%= f.label :email %><span class="bg-danger text-white small px-1 ml-2">必須</span>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <i class="fas fa-lock"></i>
          <%= f.label :password %><span class="bg-danger text-white small px-1 ml-2">必須</span>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="form-group">
          <i class="fas fa-key"></i>
          <%= f.label :password_confirmation %><span class="bg-danger text-white small px-1 ml-2">必須</span>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
        <div class="form-group">
          <i class="fas fa-user-circle"></i>
          <%= f.label :avatar %><span class="bg-secondary text-white small px-1 ml-2">任意</span>
          <%= f.file_field :avatar, onchange: 'previewFileWithId(preview)', class: 'form-control mb-3', accept: 'image/*' %>
          <%= f.hidden_field :avatar_cache %>
        </div>
        <div class='mt-3 mb-3 text-center'>
          <%= image_tag @user.avatar.url,
                        id: 'preview',
                        size: '300x200' %>
        </div>
        <%= f.submit '登録する', class: 'btn btn-outline-success' %>
      <% end %>
    </div>
  </div>
</div>
