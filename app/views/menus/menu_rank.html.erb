<div class="container">
  <%# タイトル 共通化したい %>
  <div class="rank-title">
    <%= render 'shared/title', text: 'ランキング', html: ''.html_safe %>
  </div>

  <ul class="nav nav-tabs nav-justified">
    <li class="nav-item">
      <%= link_to service_rank_path, class: 'nav-link' do %>
        <i class="fas fa-truck"></i>
        <span>サービスランキング</span>
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to menu_rank_path, class: 'nav-link font-weight-bold active' do %>
        <i class="fas fa-utensils"></i>
        <span>メニューランキング</span>
      <% end %>
    </li>
  </ul>
  <div class="text-center bg-light responsive-size">
    <% @menu_like_ranks.each.with_index(1) do |rank, i| %>
      <div class="py-5 border border-top-0">
        <span class="rank-name">
          <i class="fas fa-crown"></i>
          <%= "第#{i}位"%>
          <span class="mx-3"><%= render 'menu_likes/like_button', { menu: rank } %></span>     
        </span>
        
        <%#= render 'menu', { menu: rank } %>
        <%#= link_to "#{rank.service.name}のメニュー", service_path(rank.service), class: "card-header text-center" if current_page?('/all_menus') %><%# 代わりにserviceのロゴとか入れたい %>
        <%= link_to service_menu_path(rank.service, rank), class: "text-dark card-link" do %>
          <span class="rank-name"><%= simple_format(rank.name, style: 'margin-bottom: 0px;') %></span>
          <div class="rank-img-size pt-3"><%= image_tag "menus/#{rank.menu_image}", size: '450x300' %></div>
          <div class="card-body">
            <div class="nutrient-size">
              <%= render partial: 'nutrient', collection: rank.nutrients %>
            </div>
            <div class="text-danger">
              <%= simple_format(rank.note) %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  <div>
</div>