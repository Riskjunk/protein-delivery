<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-10 offset-lg-1">
      <h1 class="text-center mb-4">メニュー詳細</h1>
      <article class="card">
        <div class="card-body">
          <div class='row'>
            <div class='col-md-3'>
              <%= image_tag "menus/#{@menu.menu_image}", class: 'card-img-top img-fluid', size: '300x200' %>
            </div>
            <div class='col-md-9'>
              <h2><%= simple_format(@menu.name) %></h2>
              <h3 style='display: inline;'><%= render partial: 'nutrient', collection: @menu.nutrients %></h3>
            </div>
          </div>
        </div>
        <div>
          <%= render 'menu_likes/like_button', { menu: @menu } %>
          <%#= link_to 'このメニューをTwitterでシェアする', "https://twitter.com/share?url=#{request.url}&text=この宅配食が良かった！&hashtags=宅配食&hashtags=たんぱく質", title: 'Twitter', target: :_blank, rel: 'noopener noreferrer' %>
          <a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="twitter-share-button" data-size="large" data-text="この宅配食が良かった！" data-hashtags="宅配食 #たんぱく質" data-show-count="false">Tweet</a><script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
        </div>
      </article>
    </div>
  </div>
</div>