<header>
  <nav class="navbar navbar-expand-lg navigation navbar-dark bg-dark">
    <%= link_to root_path, class: 'navbar-brand' do %>
      <%= image_tag 'logo.png' %>
    <% end %>

    <%# レスポンジブ対応のナビゲーションバー %>
    <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarSupportedContent">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto main-nav align-items-center">
        <li class="nav-item px-2">
          <%= link_to '宅配サービス一覧', services_path, class: 'nav-link' %>
        </li>
        <li class="nav-item px-2">
          <%= link_to 'メニュー一覧', all_menus_path, class: 'nav-link' %>
        </li>
        <li class="nav-item dropdown px-2">
          <a class="nav-link" data-toggle="dropdown">
            <%= 'ランキング' %>
          </a>
          <div class="dropdown-menu dropdown-menu-right">
            <%= link_to 'サービスランキング', service_rank_path, class: 'dropdown-item' %>
            <%= link_to 'メニューランキング', menu_rank_path, class: 'dropdown-item' %>
          </div>
        </li>

        <li class="nav-item dropdown px-2">
          <a class="nav-link" data-toggle="dropdown">
            <%= image_tag current_user.avatar_url, size: '40x40', class: 'rounded-circle mr15' %>
            <%= current_user.name %>
          </a>
          <div class="dropdown-menu dropdown-menu-right">
            <div class="dropdown-item"><%= current_user.name %></div>
            <div class="dropdown-divider"></div>
            <%= link_to 'プロフィール', profile_path, class: 'dropdown-item' %>
            <%= link_to 'いいねしたメニュー', like_menus_path, class: 'dropdown-item' %>
            <%= link_to 'ログアウト', logout_path, class: 'dropdown-item', method: :delete %>
          </div>
        </li>
      </ul>
    </div>
  </nav>
</header>